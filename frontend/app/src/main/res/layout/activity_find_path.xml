<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindPathActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#ffffff"
            android:elevation="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_startpoint"
                android:hint="출발지 입력"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_destination"
                android:hint="도착지 입력"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경로 재검색"
                android:id="@+id/find_path_retry"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="경로 선택"
                android:id="@+id/btn_choose_path"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#DDDDFF"
            android:paddingLeft="20dp"
            android:paddingVertical="5dp"
            android:id="@+id/option_bar">

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="검색 옵션"
                android:textSize="10sp"
                android:id="@+id/btn_dialog"
                />

            <TextView
                android:id="@+id/Show_Time"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:text="출발 시간 설정"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="123dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/listview1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ListView
                    android:id="@+id/listview2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>